<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginTop="153dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="533dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="title"
        android:inputType="textLongMessage|textPersonName|text|textEmailAddress"
        android:textAlignment="viewEnd"
        android:textColor="#717171"
        android:textColorHint="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.547"
        tools:ignore="RtlCompat" />

    <Button
        android:id="@+id/btnPick"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="87dp"
        android:layout_marginBottom="85dp"
        android:background="@drawable/button"
        android:text="Pick Date and TIme"
        app:backgroundTint="@color/purple_500"
        app:iconTint="#00FFFFFF" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="133dp"
        android:layout_height="247dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="253dp"
        android:layout_marginTop="267dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="217dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible" />


    <TextView
        android:id="@+id/textView555"
        android:layout_width="254dp"
        android:layout_height="33dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="53dp"
        android:layout_marginEnd="104dp"
        android:layout_marginBottom="581dp"
        android:text="Write the Reminder title" />

    <TextView
        android:id="@+id/monnth"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="265dp"
        android:layout_marginEnd="172dp"
        android:layout_marginBottom="407dp" />

    <TextView
        android:id="@+id/yeear"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="254dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="422dp"
        android:text="TextView" />


</RelativeLayout>